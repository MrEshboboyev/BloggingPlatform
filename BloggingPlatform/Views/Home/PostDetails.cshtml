@model BloggingPlatform.ViewModels.BlogViewModels.BlogPostViewModel

@{
    ViewBag.Title = "Post Details";
}

<style>
    .post-container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

        .post-container:hover {
            transform: translateY(-5px);
        }

    .post-title {
        color: #007bff;
        font-size: 1.75rem;
    }

    .post-content {
        color: #343a40;
        font-size: 1.25rem;
        margin-bottom: 20px;
    }

    .post-meta {
        color: #6c757d;
        font-size: 0.875rem;
        margin-bottom: 20px;
    }

    .btn-primary-custom {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary-custom:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="post-container">
                <h1 class="post-title">@Model.Title</h1>
                <p class="post-meta">
                    <strong>Author:</strong> @Model.AuthorName<br />
                    <strong>Created At:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")<br />
                    <strong>Updated At:</strong> @Model.UpdatedAt.ToString("MMMM dd, yyyy")
                </p>
                <div class="post-content">
                    @Model.Content
                </div>
                <hr />
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-primary-custom">Back to Posts</a>
            </div>
        </div>
    </div>
</div>
