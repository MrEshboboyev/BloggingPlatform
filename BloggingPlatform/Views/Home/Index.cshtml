@model IEnumerable<BloggingPlatform.ViewModels.BlogViewModels.BlogPostViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="container mt-5 mb-3">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="post-container card h-100">
                    <div class="card-body">
                        <h5 class="post-title card-title">@post.Title</h5>
                        <p class="post-content card-text">
                            @post.Content.Substring(0, Math.Min(post.Content.Length, 50))...
                        </p>
                        <p class="post-meta card-meta">
                            <strong>Author:</strong> <a asp-controller="Home" asp-action="ListPosts" asp-route-authorName="@post.AuthorName"> @post.AuthorName</a><br />
                            <strong>Created At:</strong> @post.CreatedAt.ToString("MMMM dd, yyyy")
                        </p>
                        <a href="@Url.Action("PostDetails", "Home", new { postId = post.Id })" class="btn btn-primary btn-primary-custom">Continue Reading</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Bootstrap and Popper.js scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    .post-container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
        margin-bottom: 20px;
    }

        .post-container:hover {
            transform: translateY(-5px);
        }

    .post-title {
        color: #007bff;
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .post-content {
        color: #343a40;
        font-size: 1rem;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        height: 60px;
        margin-bottom: 10px;
    }

    .post-meta {
        color: #6c757d;
        font-size: 0.875rem;
        margin-bottom: 10px;
    }

    .btn-primary-custom {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary-custom:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .card {
        overflow: hidden;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-meta {
        margin-bottom: 1rem;
    }

    .btn-primary-custom {
        background-color: #007bff;
        border: none;
    }

        .btn-primary-custom:hover {
            background-color: #0056b3;
        }
</style>
